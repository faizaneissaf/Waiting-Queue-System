<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/spm_stdregno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spm_stdname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/spm_stdregno"
        app:layout_constraintStart_toStartOf="@+id/spm_stdregno"
        app:layout_constraintTop_toBottomOf="@+id/spm_stdregno" />

    <TextView
        android:id="@+id/spm_stdcls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/spm_stdname"
        app:layout_constraintStart_toStartOf="@+id/spm_stdname"
        app:layout_constraintTop_toBottomOf="@+id/spm_stdname" />

    <TextView
        android:id="@+id/spm_stdsupervisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/spm_stdcls"
        app:layout_constraintStart_toStartOf="@+id/spm_stdcls"
        app:layout_constraintTop_toBottomOf="@+id/spm_stdcls" />

    <TextView
        android:id="@+id/spm_stdprojecttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/spm_stdsupervisor"
        app:layout_constraintStart_toStartOf="@+id/spm_stdsupervisor"
        app:layout_constraintTop_toBottomOf="@+id/spm_stdsupervisor" />

    <TextView
        android:id="@+id/spm_stdtechnology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/spm_stdprojecttitle"
        app:layout_constraintStart_toStartOf="@+id/spm_stdprojecttitle"
        app:layout_constraintTop_toBottomOf="@+id/spm_stdprojecttitle" />

    <TextView
        android:id="@+id/spm_stdmeetingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/spm_stdtechnology"
        app:layout_constraintStart_toStartOf="@+id/spm_stdtechnology"
        app:layout_constraintTop_toBottomOf="@+id/spm_stdtechnology" />

    <TextView
        android:id="@+id/spm_stdmeetingdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/spm_stdmeetingtime"
        app:layout_constraintStart_toStartOf="@+id/spm_stdmeetingtime"
        app:layout_constraintTop_toBottomOf="@+id/spm_stdmeetingtime" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/primary_blue"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_senttime"></LinearLayout>

    <Button
        android:id="@+id/btn_senttime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_btn"
        android:fontFamily="@font/times_new_roman"
        android:text="More Info"
        android:textColor="@color/white"
        app:backgroundTint="?attr/colorControlNormal"
        app:backgroundTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spm_stdmeetingdate" />

</androidx.constraintlayout.widget.ConstraintLayout>