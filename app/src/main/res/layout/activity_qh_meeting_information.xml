        android:fontFamily="@font/times_new_roman"
        android:text="Call"
        android:textSize="14sp"
        app:backgroundTint="?attr/colorControlNormal"
        app:backgroundTintMode="add"
        app:layout_constraintEnd_toStartOf="@+id/btncancelfyp1"
        app:layout_constraintStart_toEndOf="@+id/btnskipmtngfyp1"
        app:layout_constraintTop_toBottomOf="@+id/qh_groupInfo_rv" />

    <Button
        android:id="@+id/btncancelfyp1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/main_btn"
        android:fontFamily="@font/times_new_roman"
        android:text="Cancel"
        android:textSize="14sp"
        app:backgroundTint="?attr/colorControlNormal"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="@+id/btncallfyp1"
