    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/qh_groupInfo_rv"
        android:layout_width="409dp"
        android:layout_height="577dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/btnskipmtngfyp1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/main_btn"
        android:fontFamily="@font/times_new_roman"
        android:text="Skip"
        android:textSize="14sp"
        app:backgroundTint="?attr/colorControlNormal"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="@+id/btncallfyp1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btncallfyp1" />

    <Button
        android:id="@+id/btncallfyp1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
